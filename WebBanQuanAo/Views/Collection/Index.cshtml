@section Scripts {
    <script>
        let page = 1;
        let pageSize = 8;
        let typeId = null;
        let maxPrice = null;
        let keyword = '';
        let sort = '';
        let colorIds = [];
        let priceTimer;

        $(document).ready(function () {
            loadProducts();
        });

                function loadProducts() {
            $.ajax({
                url: '/Collection/LoadProducts',
                type: 'GET',
                data: {
                    page: page,
                    pageSize: pageSize,
                    typeId: typeId,
                    maxPrice: maxPrice,
                    keyword: keyword,
                    sort: sort,
                    colorIds: colorIds
                },
                traditional: true,
                success: function (html) {
                    $('#product-container').html(html);
                }
            });
        }


        $(document).on('click', '.page-link', function (e) {
            e.preventDefault();
            page = $(this).data('page');
            loadProducts();
        });

        $('.category-filter').click(function () {
            typeId = $(this).data('typeid');
            page = 1;
            loadProducts();
        });

        $('#rangeInput').on('input', function () {
            clearTimeout(priceTimer);

            maxPrice = parseInt(this.value);
            $('#amount').text(maxPrice);

            priceTimer = setTimeout(() => {
                page = 1;
                loadProducts();
            }, 300);
        });


        $('#searchKeyword').on('keyup', function () {
            keyword = $(this).val();
            page = 1;
            loadProducts();
        });

        $('#sortSelect').change(function () {
            sort = $(this).val();
            page = 1;
            loadProducts();
        });

        $(document).on('change', '.color-filter', function () {
            colorIds = $('.color-filter:checked')
                .map(function () {
                    return parseInt($(this).val());
                }).get();

            page = 1;
            loadProducts();
        });



    </script>
}
