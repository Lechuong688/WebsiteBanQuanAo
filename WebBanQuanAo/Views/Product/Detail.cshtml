</script> *@
<script>
    function changeImage(src) {
        const main = document.getElementById('mainImage');
        main.src = src;

        document.querySelectorAll('.thumb-img').forEach(img => {
            img.classList.remove('active');
            if (img.src === src) {
                img.classList.add('active');
            }
        });
    }
</script>

