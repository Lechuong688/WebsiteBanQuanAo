@using Data.Entity
@model IEnumerable<ProductEntity>

<h2>Danh sách sản phẩm</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Chi tiết</th>
            @* <th>Số lượng</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Note</td>
            </tr>
        }
    </tbody>
</table>
