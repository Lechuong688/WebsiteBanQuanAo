@using Data.Entity
@model IEnumerable<UserEntity>
@{
    ViewBag.Title = "Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh sách người dùng
        </h1>
        <ol class="breadcrumb">
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Tài khoản</th>
                                    <th>Email</th>
                                    <th>Trạng thái</th>
                                    <th>Đóng tài khoản</th>
                                    <th>Phân quyền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Name</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @(user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.Now
                                                                                    ? "Bị khóa"
                                                                                    : "Hoạt động")
                                    </td>
                                    <td>
                                        <a asp-area="Admin"
                                           asp-controller="User"
                                           asp-action="Lock"
                                           asp-route-id="@user.Id"
                                           class="btn btn-danger btn-sm">
                                            Khóa
                                        </a>
                                    </td>
                                </tr>
                                }
            
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts
{

    <script type="text/javascript">
        $(document).ready(function () {
          $('#example1').DataTable()
          $('#example2').DataTable({
            'paging'      : true,
            'lengthChange': false,
            'searching'   : false,
            'ordering'    : true,
            'info'        : true,
            'autoWidth'   : false
          })
        })
    </script>

}

